<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Routes" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_color_primary_light</item>
        <item name="colorPrimaryVariant">@color/bg_color_secondary_light</item>
        <item name="colorOnPrimary">@color/bg_color_primary_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">
            @color/color_accent_secondary_light
        </item>
        <item name="android:navigationBarColor">@color/bg_color_primary_light</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- Customize your theme here. -->

        <item name="android:textColor">@color/text_color_primary_light</item>

        <item name="bgColorPrimary">@color/bg_color_primary_light</item>
        <item name="bgColorSecondary">@color/bg_color_secondary_light</item>
        <item name="textColorPrimary">@color/text_color_primary_light</item>
        <item name="textColorSecondary">@color/text_color_secondary_light</item>
        <item name="textColorPrimaryInverse">@color/text_color_primary_inverse_light</item>
        <item name="colorAccent">@color/color_accent_primary_light</item>
        <item name="colorAccentVariant">@color/color_accent_primary_variant_light</item>
        <item name="colorAccentSecondary">@color/color_accent_secondary_light</item>
    </style>
</resources>